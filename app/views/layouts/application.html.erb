<!DOCTYPE html>
<html>
  <head>
    <title>NoteShare</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <div class="jumbotron" style="background-color:#5bc0de">
      <div class="media">
        <div class="media-left">
          <%= image_tag asset_path('noteShareLogo.png'), :type =>  'image/png' , :size => "150x120"%>
        </div>
        <div class="media-body">
          <h1>NoteShare</h1>
        </div>
        
      </div>
    </div>

    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-4 text-center"><a href="/courses" class="btn btn-info" role="button">Courses</a></div>
        <div class="col-lg-4 text-center"><a href="/notesheets" class="btn btn-info" role="button">Notesheets</a></div>
        <div class="col-lg-4 text-center"><a href="/users" class="btn btn-info" role="button">Users</a></div>
      </div>
    </div>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('Student_Notes-512.png'), :rel => 'icon', :type =>  'image/png' %>
  </head>

  <body padding-bottom = "50000px">
    <%= yield %>
    
    
  </body>
  
</html>

