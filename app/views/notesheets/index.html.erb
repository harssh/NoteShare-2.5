<title>NoteShare</title>

<body>
<h1>My Notesheets</h1>
<div>
  <%= link_to 'Create New Notesheet', new_notesheet_path, :class => "btn btn-success",  :style => "color:black" %>
</div>
<p id="notice"><%= notice %></p>
<table width="60%", border-collapse="collapse", border="1px solid #00F", cellspacing="0">
  <thead>
    <tr>
      <th>Title</th>
      <th>Course</th>
      <th>Author</th>
      <th>Date Created</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @notesheets.each do |notesheet| %>
      <tr>
        <!--<td><%= notesheet.content %></td>-->
        <td><%= link_to notesheet.title, notesheet %></td>
        <td><%= idToModel(notesheet.course_id, Course).name %></td>
        <td><%= idToModel(notesheet.author_id, User).name %></td>
        <td><%= notesheet.date_created %></td>
        <td style="padding:5px">
            <%= link_to 'Edit Notesheet Info', edit_notesheet_path(notesheet), :class => "btn btn-warning" %>
        </td>
        <td style="padding:5px">
            <%= button_to 'Delete Notesheet', notesheet, :class => "btn btn-danger", method: :delete, data: {confirm: 'Are you sure?'} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

</body>
