<p id="notice"><%= notice %></p>
<title>NoteShare</title>
<div style="width:100%;height:100;border:1px solid #000; 
            text-align:center; vertical-align:middle; 
            line-height:100px; background-color:pink; white-space:nowrap">
  <%=image_tag("Student_Notes-512.png", alt: "banner", height:'50px', display:"inline")%>
 
  <h1 style= "display:inline">N o t e S h a r e</h1>

</div>
<a href="/courses">Courses</a>
<h1>Notesheets</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Course</th>
      <th>Author</th>
      <th>Date created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notesheets.each do |notesheet| %>
      <tr>
        <td><%= notesheet.content %></td>
        <td><%= notesheet.course_id %></td>
        <td><%= notesheet.author_id %></td>
        <td><%= notesheet.date_created %></td>
        <td><%= link_to 'Show', notesheet %></td>
        <td><%= link_to 'Edit', edit_notesheet_path(notesheet) %></td>
        <td><%= link_to 'Destroy', notesheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Notesheet', new_notesheet_path %>
