<title>NoteShare</title>

<body>
<h1>Users</h1>
<div>
  <%= link_to 'Add New User', new_user_path, :class => "btn btn-success",  :style => "color:black" %>
</div>
<p id="notice"><%= notice %></p>
<table id="dt" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Password</th>
      <th>Usertype</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.usertype %></td>
        <td style="padding:5px"><%= link_to 'Show', user %></td>
        <td style="padding:5px">
          <%= link_to 'Edit User Info', edit_user_path(user), :class => "btn btn-warning" %>
        </td>
        <td style="padding:5px">
          <%= button_to 'Destroy', user, method: :delete, :class => "btn btn-danger", data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

</body>
